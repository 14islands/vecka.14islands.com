
scrollerPositionFromTop = 68vh

.Weeks
  position: relative
  height: 100%
  width: 100%
  overflow: hidden

  &-card
    position: relative
    z-index: 20
    top: 20vh
    padding: 0 14vw
    margin: 0 auto
    max-width: 700px

    @media (min-width: breakpoint.large)
      padding: 0

  &-cardWrapper
    display: none
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    &.isSelected
      display: flex

  @keyframes slide-up {
    from {
      opacity: 0.5
      transform: translateY(10px);
    }
    to   {
      opacity: 1
      transform: none
    }
  }

  @keyframes fade-in {
    from {
      opacity: 0
    }
    to   {
      opacity: 1
    }
  }

  &-number
    cursor: pointer
    margin-left: -2px
    padding-right: 1rem
    //opacity: 0
    //transform: translateY(-10px)
    transition: opacity 1s

  &-numberAnimate
    display: inline-block
    will-change: transform
    animation-duration: 200ms
    animation-timing-function: ease.outQuint
    animation-fill-mode: forwards

    .isSelected &
      animation-name: slide-up;

  &-dateWrapper
    text-align: right;

  &-monthPeriod,
  &-daysPeriod
    display: block

  &-scrollerWrapper
    overflow: hidden

    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: -100px // hides scrollbar
    z-index: 10

    opacity: 0
    transition: opacity 100ms ease.inQuad

    &:after
      position: absolute;
      top: calc(68vh - 19px)
      left: calc(50% - 20px)
      content: ' '

      display: block
      height: 36px
      width: 36px
      border: 2px solid color.primary
      border-radius: 50px

      @media (min-width: breakpoint.large)
        top: calc(68vh - 22px)
        left: calc(50% - 23px)
        height: 42px
        width: 42px

    &.isVisible
      opacity: 1

  &-tester
    position: fixed
    top: 0
    left: 0
    right: 50%
    bottom: 0

    display: none
    //background: rgba(0, 200, 0, 0.5);

  &-scroller
    overflow: auto
    -webkit-overflow-scrolling: touch
    width: 100%
    height: 100%
    position: relative;

    will-change: scroll-position;

  &-scrollerList
    display: flex
    align-items: flex-start
    flex-wrap: nowrap
    white-space: nowrap

    position: relative
    top: scrollerPositionFromTop

    // position center in middle of
    // first item
    margin-left: -30px

    // Set focus point in the middle
    left: 50%
    box-sizing: content-box
    padding-right: 50%

  &-scrollerItem
    //height: 2px
    flex: 1
    margin: 0
    //background: white

    position: relative;
    text-align: center
    user-select: none

  &-scrollerItemNumber
    position: relative
    top: -11px
    cursor: pointer
    user-select: none
    padding: 4px
