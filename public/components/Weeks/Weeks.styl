
.Weeks
  position: relative
  height: 100%
  width: 100%
  overflow: hidden

  &-card
    position: relative
    z-index: 20
    top: 20vh
    padding: 0 14vw

  &-cardWrapper
    display: none
    flex-direction: row;
    justify-content: space-between;
    align-items: center;

    &.isSelected
      display: flex

  &-number
     cursor: pointer
     margin-left: -2px
     padding-right: 1rem

  &-dateWrapper
    text-align: right;

  &-monthPeriod,
  &-daysPeriod
    display: block

  &-scrollerWrapper
    overflow: hidden

    position: fixed
    top: 0
    left: 0
    right: 0
    bottom: -100px // hides scrollbar
    z-index: 10

    opacity: 0
    transition: opacity 100ms ease.inQuad

    &:after
      position: absolute;
      top: calc(68vh - 19px)
      left: calc(50% - 20px)
      content: ' '

      display: block
      height: 36px
      width: 36px
      border: 2px solid color.primary
      border-radius: 50px

    &.isVisible
      opacity: 1

  &-tester
    position: fixed
    top: 0
    left: 0
    right: 50%
    bottom: 0

    display: none
    //background: rgba(0, 200, 0, 0.5);

  &-scroller
    overflow: auto
    -webkit-overflow-scrolling: touch
    width: 100%
    height: 100%
    position: relative;

  &-scrollerList
    display: flex
    align-items: flex-start
    flex-wrap: nowrap
    white-space: nowrap

    position: relative
    top: 68vh

    // position center in middle of
    // first item
    margin-left: -30px

    // Set focus point in the middle
    left: 50%
    box-sizing: content-box
    padding-right: 50%

  &-scrollerItem
    //height: 2px
    flex: 1
    margin: 0
    //background: white

    position: relative;
    text-align: center

  &-scrollerItemNumber
    position: relative
    top: -11px
